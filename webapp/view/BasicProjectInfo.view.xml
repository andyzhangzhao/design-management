<mvc:View
	controllerName="projectmanagement.controller.BasicProjectInfo"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
    xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
    xmlns:form="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">

	<semantic:SemanticPage
		id="projectBasicInfoPage"
		headerPinnable="false"
		toggleHeaderOnTitleClick="false"
		showFooter="{ui>/editMode}"
		class="basicProjectPage">
		<semantic:titleHeading>
			<Title
				text="项目基本信息"
				level="H2"/>
		</semantic:titleHeading>

		<semantic:titleMainAction>
			<semantic:TitleMainAction id="editAction" text="编辑" visible="{= !${ui>/editMode}}" press='.onEdit'/>
		</semantic:titleMainAction>
		<semantic:headerContent>
			<f:GridContainer>
				<f:layout>
					<f:GridContainerSettings rowSize="2rem" columnSize="1.9rem" gap="0.5rem" />
				</f:layout>
				<f:items>
					<Label text="项目编码:" class="" >
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="2" />
						</layoutData>
					</Label>
					<Text text="{details>prjid}" class="">
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="6" />
						</layoutData>
					</Text>
					<Label text="项目名称:" class="">
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="2" />
						</layoutData>
					</Label>
					<Text text="{details>prjnm}" class="">
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="8" />
						</layoutData>
					</Text>
					<Label text="项目状态:" class="">
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="2" />
						</layoutData>
					</Label>
					<Text text="{details>to_xm/TXT_DESC}" class="">
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="4" />
						</layoutData>
					</Text>

					<Label text="项目地址:" class="">
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="2" />
						</layoutData>
					</Label>
					<Text text="{details>address}" visible="{= !${ui>/editMode}}" class="">
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="10" />
						</layoutData>
					</Text>
					<TextArea id="projectAddressInput" visible="{ui>/editMode}" value="{details>address}" maxLength="100" width='376px'>
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="10" />
						</layoutData>
					</TextArea>
					<!-- <Image id='projectImage' src="{ui>/imageSrc}" width='480px' height='450px' class="projectImage">
						<layoutData>
							<f:GridContainerItemLayoutData rows="10" columns="12" />
						</layoutData>
					</Image> -->
					<HBox>
						<Carousel id='projectImageCarousel' loop="true" pages="{ui>/files}" visible="{= ${ui>/files}.length > 0}" width='480px' height='393px' showPageIndicator="false" class="projectImage">
							<Image src="{ui>src}" width='480px' height='450px' />
						</Carousel>
						<layoutData>
							<f:GridContainerItemLayoutData rows="10" columns="12" />
						</layoutData>
					</HBox>
					<Label text="项目简介:" class="">
						<layoutData>
							<f:GridContainerItemLayoutData rows="2" columns="2" />
						</layoutData>
					</Label>
					<Text text="{details>prjdesc}" visible="{= !${ui>/editMode}}" class="projectDescText">
						<layoutData>
							<f:GridContainerItemLayoutData rows="8" columns="10" />
						</layoutData>
					</Text>
					<TextArea id="projectDescInput" class="projectDescInput" visible="{ui>/editMode}" value="{details>prjdesc}" width='376px' height="350px">
						<layoutData>
							<f:GridContainerItemLayoutData rows="8" columns="10" />
						</layoutData>
					</TextArea>

					<VBox visible="{ui>/editMode}">
                    	<core:Fragment fragmentName="projectmanagement.view.UploadSet" type="XML" />
						<layoutData>
							<f:GridContainerItemLayoutData minRows="{
								parts: [{path:'ui>/files'}],
								formatter: '.formatImageRow'
							}" columns="24" />
						</layoutData>
                	</VBox>
					
				</f:items>
			</f:GridContainer>
		</semantic:headerContent>
