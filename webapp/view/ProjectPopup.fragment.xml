<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Dialog title='{ui>/projectPopup/title}'>
		<content>
            <VBox class="sapUiMediumMargin">
                <HBox alignItems='Center' class="sapUiSmallMarginBottom">
                    <Label text='设计项目名称:' width='100px' required='true'/>
                    <Input id='projectDescInput' value='{ui>/projectPopup/projectDesc}' valueStateText='项目名称不能为空' enabled='{ui>/projectPopup/projectDescEnabled}' width='400px' liveChange='.validateProjectDesc'/>
                </HBox>
                <HBox alignItems='Center' class="sapUiSmallMarginBottom">
                    <Label text='关联项目:' width='100px' required='true'/>
                    <Select id='relatedProjectSelect' width='400px' valueStateText='关联项目不能为空'  forceSelection='false' change='.validateRelatedProject' selectedKey='{ui>/projectPopup/relatedProjectId}' enabled='{ui>/projectPopup/relatedProjectSelectEnabled}' items="{
                        path: 'details>/zrre_i_proj'
                    }">
                        <core:ListItem key="{details>itmnr}" text="{details>itmnm}"/>
                    </Select>
                </HBox>
                
                <VBox items="{
                    path: 'ui>/projectPopup/projectInfo'
                }">
                    <VBox class="sapUiTinyMarginBottom">
                        <HBox alignItems='Center'>
                            <Label text='业态:' width='100px'/>
                            <CheckBox text="{ui>yt/ytDesc}" selected="{ui>yt/selected}" select='.onSelectYt'/>
                        </HBox>
                        <HBox alignItems='Center'>
                            <Label text='专业:' width='100px'/>
                            <HBox items="{
                                path: 'ui>major'
                            }">
                                <CheckBox enabled='{= !!${ui>enabled}}' text="{ui>majorDesc}" selected="{ui>selected}" class="sapUiTinyMarginEnd"/>
                            </HBox>
                        </HBox>
                        
                    </VBox>
                    

                </VBox>
            </VBox>
        </content>
        <beginButton>
            <Button type='Emphasized' text='保存' press='onSave'/>
        </beginButton>
        <endButton>
            <Button text='取消' press='onCancel'/>
        </endButton>
	</Dialog>
</core:FragmentDefinition>
