<mvc:View
    controllerName="projectmanagement.controller.ProjectList"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core"
	height="100%">

	<Shell id="shell" appWidthLimited='false'>
		<semantic:SemanticPage
			id="projectPage"
			headerPinnable="true"
			toggleHeaderOnTitleClick="true">
			<semantic:titleHeading>
				<Title
					text="项目"
					level="H2"/>
			</semantic:titleHeading>
			<semantic:headerContent>
				<fb:FilterBar id="filterbar" reset="onReset" search="onFilter" useToolbar="false" showGoOnFB="true" showRestoreOnFB="true">	
					<fb:filterGroupItems>
						<fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="djh" label="开发项目"  visibleInFilterBar="true" >
							<fb:control>
								<Input id="devProjectInput" type="Text"/>
							</fb:control>
						</fb:FilterGroupItem>
						<fb:FilterGroupItem groupName="G1" groupTitle="Group1" name="companyCode" label="设计项目"  visibleInFilterBar="true">
							<fb:control>
								<Input id="designProjectInput" type="Text"/>
							</fb:control>
						</fb:FilterGroupItem>
					</fb:filterGroupItems>
				</fb:FilterBar>
			</semantic:headerContent>
			<semantic:content>
				<Table
					id="projectTable"
					width="auto"
					items="{
						path: '/zrre_c_dmcp',
						parameters: {
							count: true
						},
						sorter: [{
							path: 'prjnr'
						},{
							path: 'Dspid'
						},{
							path: 'Ytid'
						}]
					}"
					growingThreshold='40'
					growing="true"
					growingScrollToLoad="true"
					sticky="ColumnHeaders,HeaderToolbar"
					class="sapUiMediumMarginBottom"
					updateFinished=".tableUpdateFinished">
					<headerToolbar>
						<OverflowToolbar>
							<Title
								id="tableHeader"
								text="项目"
								level="H3"/>
							<ToolbarSpacer />
							<Button text="新建项目" enabled='{ui>/tableSelected}' press=".onCreateRootProject"/>
						</OverflowToolbar>
					</headerToolbar>
					<columns>
						<Column id='column1' width='10%' mergeDuplicates='true' mergeFunctionName="data#mergeKey">
							<Text text="开发项目" />
						</Column>
						<Column id='column2' width='10%' mergeDuplicates='true' mergeFunctionName="data#mergeKey">
							<Text text="设计项目" />
						</Column>
						<Column id='column3' width='5%' mergeDuplicates='true' mergeFunctionName="data#mergeKey">
							<Text text="业态"/>
						</Column>
						<Column id='column4' width='5%'>
							<Text text="专业" />
						</Column>	
						<Column id='column5' width='5%'>
							<Text text="设计评审" />
						</Column>
						<Column id='column7' width='5%'>
							<Text text="品控管理" />
						</Column>
						<Column id='column8' width='5%'>
							<Text text="图纸管理" />
						</Column>
						<Column id='column9' width='7%'>
							<Text text="封样及验收" />
						</Column>	
						<Column id='column12' width='5%'>
							<Text text="设计变更" />
						</Column>		
						<Column id='column13' width='5%'>
							<Text text="设计限额" />
						</Column>		
						<Column id='column14' width='7%'>
							<Text text="设计后评估" />
						</Column>	
						<Column id='column15' width='10%' mergeDuplicates='true' mergeFunctionName="data#mergeKey">
							<Text text="操作" />
						</Column>																							
					</columns>

					<items>
						<ColumnListItem>
							<cells>
								<Text text="{prjnm}">
									<customData>
										<core:CustomData key="mergeKey" value="{prjnr}" />
									</customData>
								</Text>
								<HBox alignItems="Center">
									<customData>
										<core:CustomData key="mergeKey" value="{prjnr}{Dspid}" />
									</customData>
									<Text text="{Dspidnm}" />
								</HBox>
								<Text text="{ytdesc}">
									<customData>
										<core:CustomData key="mergeKey" value="{prjnr}{Dspid}{Ytid}" />
									</customData>
								</Text>
								<Text
									text="{majordesc}"/>
								<ObjectStatus
									text="{sjps}"
									state="{
									parts: [
										{path: 'sjps'}
									],
									formatter: '.formatStatus'
								}" />
								<ObjectStatus
									text="{pkgl}"
									state="{
									parts: [
										{path: 'pkgl'}
									],
									formatter: '.formatStatus'
								}" />
								<ObjectStatus
									text="{tzgl}"
									state="{
									parts: [
										{path: 'tzgl'}
									],
									formatter: '.formatStatus'
								}" />
								<ObjectStatus
									text="{fyjys}"
									state="{
									parts: [
										{path: 'fyjys'}
									],
									formatter: '.formatStatus'
								}" />
								<ObjectStatus
									text="{sjbg}"
									state="{
									parts: [
										{path: 'sjbg'}
									],
									formatter: '.formatStatus'
								}" />
								<ObjectStatus
									text="{xesj}"
									state="{
									parts: [
										{path: 'xesj'}
									],
									formatter: '.formatStatus'
								}" />
								<ObjectStatus
									text="{hpg}"
									state="{
									parts: [
										{path: 'hpg'}
									],
									formatter: '.formatStatus'
								}" />
								<HBox alignItems="Center">
									<customData>
										<core:CustomData key="mergeKey" value="{prjnr}{Dspid}" />
									</customData>
									<Button icon='sap-icon://add' class='sapUiTinyMarginEnd' press='.onCreateChildProject' />
									<Button icon='sap-icon://edit' class='sapUiTinyMarginEnd' press='.onEditProject' />
									<Button icon='sap-icon://detail-view' press='.toDetail' />
								</HBox>	
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				
			</semantic:content>
		</semantic:SemanticPage>
	</Shell>
</mvc:View>
